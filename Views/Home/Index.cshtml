<!DOCTYPE html>
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta charset="utf-8" />
    <script src="SOexam.js"></script>
    <title>StackOverflow and Better</title>
  

</head>
<body>
 
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3">

                <ol class="list-group list-group-numbered">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2021 Stack Overflow</div>
                            Registerd Users
                        </div>
                        <span class="badge bg-primary rounded-pill">14 million</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2021 Stack Overflow</div>
                            Questions
                        </div>
                        <span class="badge bg-primary rounded-pill">21 million</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2021 Stack Overflow</div>
                            Answers
                        </div>
                        <span class="badge bg-primary rounded-pill">31 million</span>
                    </li>
                </ol>
                <br>
                <ol class="list-group list-group-numbered">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2022 Stack Overflow</div>
                            Comments
                        </div>
                        <span class="badge bg-primary rounded-pill">75 million</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2022 Stack Overflow</div>
                            Questions
                        </div>
                        <span class="badge bg-primary rounded-pill">18 million</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">2022 Stack Overflow</div>
                            Answers
                        </div>
                        <span class="badge bg-primary rounded-pill">27 million</span>
                    </li>
                </ol>

            </div>
            <div class="col-lg-1">
                <div class="btns">

                    <button type="button" id="up" class="btn btn-* shadow-none"><img src="https://e7.pngegg.com/pngimages/792/964/png-clipart-computer-icons-up-arrow-angle-black.png" alt="Alternate Text" style="width: 25px; height: 15px; transform: rotate(360deg); " /></button>
                    <div id="counter" style="color:blue">1535</div>
                    <button type="button" id="dwn" class="btn btn-* shadow-none"><img src="https://e7.pngegg.com/pngimages/792/964/png-clipart-computer-icons-up-arrow-angle-black.png" alt="Alternate Text" style="width:25px;height:15px;transform:rotate(180deg); " /></button>
                </div>
            </div>
            <div class="col-md-5">
                <div>
                    <h2 id="getTitle"></h2>
                    <p id="getText"></p>
                    <div style="text-align:right ; font-size:small" id="getId"></div>
                    <hr>
                </div>
                <div>
                    <h2>Answers</h2>
                    <div style="text-align:right; font-size:small" id="ansId"></div>
                </div>
                <div>
                    <table class="table" id="answers">
                        <tr>
                            <td id="td1"></td>
                        </tr>
                        <tr>
                            <td id="td2"></td>
                        </tr>
                        <tr>
                            <td id="td3"></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-primary mb-3" style="max-width: 18rem; background-color:honeydew ">
                    <div class="card-header bg-transparent border-primary">Post Your Answer</div>
                    <div class="card-body text-primary">
                        <input type="text" name="user_name" id="userName" placeholder="Name" style="border-radius:5px"><br><br>
                        <textarea name="txt" id="text" style="border-radius:5px ; resize:none" placeholder="Text..."></textarea>
                    </div>
                    <div class="card-footer bg-transparent border-primary" style="text-align:right">
                        <button class="btn  btn-outline-primary" id="post" type="submit">Post</button>
                    </div>
                </div>
                <br>
                <div class="card" style="width: 250px; text-align: center; border-radius: 10px;">
                    <div class="card-body">
                        <h5 class="card-title">Ask your question</h5>
                        <img class="card-img-top" src="https://cdn.sstatic.net/Img/teams/teams-illo-free-sidebar-promo.svg?v=47faa659a05e" alt="Card image cap"><br>
                        <a href="#" class="btn btn-success">Ask</a>
                    </div>
                </div>
            </div>
            <img src="https://stackoverflow.co/img/product/audience/illo-1-h1.svg">
        </div>

    </div>
    @section Scripts
    {
        <script src="~/js/SOexam.js"></script>
    }
</body>

</html>

